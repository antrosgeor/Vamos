<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	android:scrollbars="none" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vamos.Login_user"
    android:background="@color/green"  >
    
    
    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:textSize="20sp"
        android:text="@string/welcome" />

    <TextView
        android:id="@+id/ShowUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Welcome"
        android:layout_alignBottom="@+id/Welcome"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/Welcome"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/Welcome"
        android:textStyle="bold"
        android:textSize="20sp"
         />

    <Button
        android:id="@+id/go_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Show_last_test"
        android:layout_alignRight="@+id/Show_last_test"
        android:layout_alignStart="@+id/Show_last_test"
        android:layout_alignEnd="@+id/Show_last_test"
        android:layout_below="@+id/ShowUser"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_send"    
        android:textColor="#FDFDFD" 
        android:text="@string/go_to_test" />

    <Button
        android:id="@+id/Delete_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Log_Out"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_back"
        android:text="@string/delete"
        android:textColor="@color/blacks" />

   <!-- <Button
        android:id="@+id/viewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Delete_user"
        android:layout_alignRight="@+id/Delete_user"
        android:layout_alignEnd="@+id/Delete_user"
        android:layout_marginBottom="20dp"
        android:text="@string/viewAll" />
 -->
      
      <!-- android:layout_alignLeft="@+id/Change_The_Data" 
           android:layout_toLeftOf="@+id/Delete_user"-->

    <Button
        android:id="@+id/Change_The_Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_db"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_sing_up"
        android:text="@string/Change_The_Data"
        android:textColor="#FDFDFD" />

    <Button
        android:id="@+id/show_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Change_The_Data"
        android:layout_alignRight="@+id/Change_The_Data"
        android:layout_alignEnd="@+id/Change_The_Data"
        android:layout_alignStart="@+id/Change_The_Data"
        android:layout_below="@+id/Show_last_test"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_show"
        android:text="@string/show_db"
        android:textColor="#FDFDFD" />

    <Button
        android:id="@+id/Show_last_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/show_db"
        android:layout_alignRight="@+id/show_db"
        android:layout_alignEnd="@+id/show_db"
        android:layout_alignStart="@+id/show_db"
        android:layout_below="@+id/go_test"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_reset"
        android:text="@string/Show_last_test"
        android:textColor="#FDFDFD" />

    <Button
        android:id="@+id/Log_Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Welcome"
        android:layout_alignStart="@+id/Welcome"
        android:layout_below="@+id/Change_The_Data"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_back"
        android:text="@string/log_out"
        android:textColor="#FDFDFD" />

</RelativeLayout>

</ScrollView>
