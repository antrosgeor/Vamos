<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green" >
	
	<!--ta pio pano einai gia na dimiourgithi to scrollview  -->
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vamos.Show_before_install" >

        <!-- layout_below = me afto dilonoume se pio id tha einai apo kato -->
		<!--  -->

		<TextView
		    android:id="@+id/Edit_Text"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignEnd="@+id/Edit_Sex"
		    android:layout_alignRight="@+id/Edit_Sex"
		    android:layout_marginBottom="40dp"
		    android:hint="@string/Edit_Text"
            android:textColor="@color/blacks"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size"
		    android:text="@string/welcome_show" />
		
		<TextView
            android:id="@+id/First_Name"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/Edit_Text"
            android:text="@string/First_Name"
            android:textColor="@color/blacks"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size" />
        
		<!-- layout_below = me afto dilonoume se pio id tha einai apo kato -->
		<!-- layout_width kai layout_heigth pernoun tis times pou exoume dosi sto dimens.xml -->
		
        <TextView
            android:id="@+id/Edit_First_Name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/First_Name"
            android:layout_toRightOf="@+id/First_Name"
            android:layout_below="@+id/Edit_Text"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/Edit_Text"
            android:background="@drawable/edittext_contact" />

        <TextView
            android:id="@+id/Last_Name"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_below="@+id/Edit_First_Name"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/Last_Name"
            android:textColor="@color/blacks"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size" />
        
        <TextView
            android:id="@+id/Edit_Last_Name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_First_Name"
            android:layout_toEndOf="@+id/Last_Name"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toRightOf="@+id/Last_Name"
            android:hint="@string/Edit_Text" 
            android:background="@drawable/edittext_contact"
            />

        <TextView
            android:id="@+id/Username"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_below="@+id/Edit_Last_Name"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/Username"
            android:textColor="@color/blacks"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/Edit_Username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_Last_Name"
            android:layout_toEndOf="@+id/Username"
            android:layout_toRightOf="@+id/Username"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_contact"
            android:hint="@string/Edit_Text" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_below="@+id/Edit_Username"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/Email"
            android:textColor="@color/blacks"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/Edit_Email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_Username"
            android:layout_toEndOf="@+id/Email"
            android:layout_toRightOf="@+id/Email"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_contact"
            android:hint="@string/Edit_Text" />

        <TextView
            android:id="@+id/Password"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_below="@+id/Edit_Email"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/Password"
            android:textColor="@color/blacks"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/Edit_Password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_Email"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_contact"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/Password"
            android:layout_toRightOf="@+id/Password"
            android:hint="@string/Edit_Text" />
		
        <TextView
            android:id="@+id/Sex"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/Edit_Password"
            android:text="@string/Sex"
            android:textColor="@color/blacks"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size" />
        
        <TextView
            android:id="@+id/Edit_Sex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Sex"
            android:layout_below="@+id/Edit_Password"
            android:layout_toRightOf="@+id/Sex"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_contact"
            android:layout_marginEnd="20dp"
            android:hint="@string/Edit_Text" />

        <TextView
            android:id="@+id/Age"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_below="@+id/Edit_Sex"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/Age"
            android:textColor="@color/blacks"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size" />
        
        <TextView
            android:id="@+id/Edit_Age"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_Sex"
            android:layout_toEndOf="@+id/Age"
            android:maxLength="2"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_contact"
            android:layout_toRightOf="@+id/Age"
            android:hint="@string/Edit_Text" />

        <TextView
            android:id="@+id/Family"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_below="@+id/Edit_Age"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/blacks"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size"
            android:text="@string/Family" />

        <TextView
            android:id="@+id/Edit_Family"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_Age"
            android:layout_toEndOf="@+id/Family"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toRightOf="@+id/Family"
            android:background="@drawable/edittext_contact"
            android:hint="@string/Edit_Text" />

        <TextView
            android:id="@+id/job"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_below="@+id/Edit_Family"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/job"
            android:textColor="@color/blacks"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/Edit_job"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_Family"
            android:layout_toEndOf="@+id/job"
            android:layout_toRightOf="@+id/job"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_contact"
            android:hint="@string/Edit_Text" />

        <TextView
            android:id="@+id/Money"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_below="@+id/Edit_job"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/Money"
            android:textColor="@color/blacks"
        	android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/Edit_Money"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_job"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/Money"
            android:layout_toRightOf="@+id/Money"
            android:background="@drawable/edittext_contact"
            android:hint="@string/Edit_Text" />

  
	<Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_Money"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_back"    
        	android:textColor="#FDFDFD" 
            android:text="@string/Back" />
        
        <Button
            android:id="@+id/Install"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/back"
            android:layout_alignTop="@+id/back"
            android:layout_below="@+id/Edit_Money"
            android:layout_toEndOf="@+id/back"
            android:layout_toRightOf="@+id/back"
            android:background="@drawable/button_send"    
        	android:textColor="#FDFDFD" 
            android:text="@string/install_data" />

    </RelativeLayout>

</ScrollView>