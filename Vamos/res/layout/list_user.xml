<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green" >
	
	<!--ta pio pano einai gia na dimiourgithi to scrollview  -->
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.p_ergasia1.MainActivity" >
        
    <TextView
        android:id="@+id/First_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blacks"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textSize="@dimen/font_size"
        android:text="@string/First_Name"
        />

    <EditText
        android:id="@+id/Edit_First_Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:layout_below="@+id/First_Name"
        android:maxLength="100"
        android:singleLine="true" 
        android:drawableLeft="@drawable/male2"
        android:drawableStart="@drawable/male2"
        android:background="@drawable/edittext_contact" 
        android:inputType="text"
        android:hint="@string/Enter_your_FName"/>   
        <!-- layout_below = me afto dilonoume se pio id tha einai apo kato -->
		<!--  -->
        
   	<TextView
        android:id="@+id/Last_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Edit_First_Name"
        android:textColor="@color/blacks"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textSize="@dimen/font_size"
        android:text="@string/Last_Name"
        />

    
    <EditText
        android:id="@+id/Edit_Last_Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Last_Name"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:maxLength="100"
        android:singleLine="true"
        android:inputType="text"
        android:drawableLeft="@drawable/male2"
        android:drawableStart="@drawable/male2"
        android:background="@drawable/edittext_contact"
        android:hint="@string/Enter_your_LName"  />
       
    <TextView
        android:id="@+id/Username"
        android:layout_width="@dimen/textview_width"
        android:layout_height="@dimen/textview_height"
        android:layout_below="@+id/Edit_Last_Name"
        android:text="@string/Username"
        android:textColor="@color/blacks"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textSize="@dimen/font_size"
         />

        <EditText
            android:id="@+id/Edit_Username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Username"
            android:inputType="text"
            android:layout_marginTop="5dp"
        	android:ems="10"
        	android:maxLength="100"
        	android:singleLine="true"
        	android:drawableLeft="@drawable/male2"
        	android:drawableStart="@drawable/male2"
        	android:background="@drawable/edittext_contact"
            android:hint="@string/Enter_your_UName" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_below="@+id/Edit_Username"
            android:text="@string/Email"
   			android:textColor="@color/blacks"
        	android:layout_marginTop="20dp"
        	android:textAppearance="?android:attr/textAppearanceMedium" 
        	android:textSize="@dimen/font_size"
         	/>

        <EditText
            android:id="@+id/Edit_Email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="5dp"
        	android:ems="10"
        	android:maxLength="100"
        	android:singleLine="true"
        	android:drawableLeft="@drawable/mail"
        	android:drawableStart="@drawable/mail"
        	android:background="@drawable/edittext_contact"
            android:hint="@string/Enter_your_Email" />

        <TextView
            android:id="@+id/Password"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_below="@+id/Edit_Email"
            android:textColor="@color/blacks"
        	android:layout_marginTop="20dp"
        	android:textAppearance="?android:attr/textAppearanceMedium" 
        	android:textSize="@dimen/font_size"
            android:text="@string/Password"
            />

        <EditText
            android:id="@+id/Edit_Password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Password"
            android:layout_marginTop="5dp"
        	android:ems="10"
        	android:maxLength="100"
        	android:singleLine="true"
        	android:drawableLeft="@drawable/key"
        	android:drawableStart="@drawable/key"
        	android:background="@drawable/edittext_contact"
            android:inputType="textPassword"
            android:hint="@string/Enter_your_Password" />

        <TextView
            android:id="@+id/Re_Password"
            android:layout_width="@dimen/textview_width"
            android:layout_height="@dimen/textview_height"
            android:layout_below="@+id/Edit_Password"
            android:text="@string/Re_Password"
           	android:textColor="@color/blacks"
        	android:layout_marginTop="20dp"
        	android:textAppearance="?android:attr/textAppearanceMedium" 
        	android:textSize="@dimen/font_size"
         	/>

        <EditText
            android:id="@+id/Edit_Re_Password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Re_Password"
            android:inputType="textPassword"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
        	android:ems="10"
        	android:maxLength="100"
        	android:singleLine="true"
        	android:drawableLeft="@drawable/key"
        	android:drawableStart="@drawable/key"
        	android:background="@drawable/edittext_contact"
            android:hint="@string/Enter_your_RPassword" />

        <Button
            android:id="@+id/Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_Re_Password"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/Back"
            android:background="@drawable/button_back"    
        	android:textColor="#FDFDFD" />
		
		<Button
            android:id="@+id/Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Edit_Re_Password"
            android:layout_alignBottom="@+id/Cancel"
            android:layout_alignTop="@+id/Cancel"
            android:layout_toEndOf="@+id/Cancel"
            android:layout_toRightOf="@+id/Cancel"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/Reset"
            android:background="@drawable/button_reset"    
        	android:textColor="#FDFDFD" />
        
        <Button
            android:id="@+id/Next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Reset"
            android:layout_alignTop="@+id/Reset"
            android:layout_below="@+id/Edit_Re_Password"
            android:layout_toEndOf="@+id/Reset"
            android:layout_toRightOf="@+id/Reset"
            android:text="@string/Next"
            android:background="@drawable/button_send"    
        	android:textColor="#FDFDFD" />

    </RelativeLayout>

</ScrollView>