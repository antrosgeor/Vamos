<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	android:scrollbars="none" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vamos.Show_Answer"
    android:background="@color/green"  >

    
    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/hello_world" />
      
      <ImageView
        android:id="@+id/Test_Image"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/show"
        android:layout_margin="10dp"
        android:contentDescription="@string/descriptionimage" />
      
    <Button
        android:id="@+id/userButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Test_Image"
        android:layout_alignEnd="@+id/Test_Image"
        android:layout_marginBottom="20dp"
     	android:background="@drawable/button_send"  
     	android:drawableRight="@drawable/male2"
     	android:drawableEnd="@drawable/male2" 
        android:text="@string/User_Page" />

    <Button
        android:id="@+id/go_to_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userButton"
        android:layout_alignBottom="@+id/userButton"
        android:layout_alignLeft="@+id/Test_Image"
        android:layout_alignStart="@+id/Test_Image"
        android:background="@drawable/button_sing_up"
     	android:drawableRight="@drawable/test"
     	android:drawableEnd="@drawable/test"     
       	android:textColor="#FDFDFD"
        android:text="@string/test_again" />

    <TextView
        android:id="@+id/bodyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Test_Image"
        android:layout_alignRight="@+id/Test_Image"
        android:layout_alignStart="@+id/Test_Image"
        android:layout_alignEnd="@+id/Test_Image"
        android:layout_below="@+id/Test_Image"
        android:layout_marginTop="19dp"
        android:background="@color/transparent"
        android:text="@string/dont" />

    <TextView
        android:id="@+id/where_to_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userButton"
        android:layout_alignLeft="@+id/bodyTitle"
        android:layout_alignRight="@+id/bodyTitle"
        android:layout_alignStart="@+id/bodyTitle"
        android:layout_alignEnd="@+id/bodyTitle"
        android:layout_below="@+id/bodyTitle"
        android:layout_marginTop="15dp"
        android:background="@color/transparent"
        android:text="@string/dont" />

</RelativeLayout>
</ScrollView>