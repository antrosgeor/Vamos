<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle" >
    <corners 
        android:radius="16dp"/>
    <gradient 
        android:startColor="#3A87C9"
        android:centerColor="#3E90D7"
        android:endColor="#337AB7"
        android:angle="90"
        android:type="linear"/>
    <padding 
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        
        />
    <!-- stroke is use for border of the rectangle -->
    <stroke 
        android:color="#626262"
        android:width="1.5dp"
        />
        
</shape>
















